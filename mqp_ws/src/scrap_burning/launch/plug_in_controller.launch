<launch>
    <!-- Scrap spawning arguments -->
    <arg name="scrap_name" default="simpleCylinder" />
    <arg name="x" default="0.75" />
    <arg name="y" default="0.0" />
    <arg name="z" default="0.0" />
    <arg name="x_pos" default="5.0"/>
    <arg name="y_pos" default="0.0"/>
    <arg name="z_pos" default="0.0"/>

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find franka_description)/robots/franka_camera.xacro" />

    <!-- Setup gazebo environment -->
    <node name="map_frame" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 map world 100" />
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="paused" value="true" />
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <!-- Spawn robot & scrap -->
    <node name="spawn_franka" pkg="gazebo_ros" type="spawn_model"
          args="-param robot_description -urdf -model panda -J panda_joint2 -0.78 -J panda_joint4 -0.78 -J panda_joint6 0.78 -J panda_joint7 0.78" />
    <node name="spawn_scrap" pkg="gazebo_ros" type="spawn_model"
          args="-file $(find scrap_descs)/desc/$(arg scrap_name).urdf -urdf -model scrap -x $(arg x) -y $(arg y) -z $(arg z)" />

    <!-- Launch controllers & moveit -->
    <!-- Load params -->
    <rosparam file="$(find scrap_burning)/config/controllers.yaml" command="load" />
    <rosparam file="$(find panda_moveit_controller)/config/panda_control.yaml" command="load" />

    <!-- Launch controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="plug_in_controller" ns="/panda"/>
    <node name="panda_moveit_controller_spawner" pkg="controller_manager" type="spawner" respawn="false" args="joint_state_controller gazebo_ros_control" ns="/panda" />

    <!-- Launch robot_state_publisher -->
    <node name="panda_moveit_robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true">
        <remap from="joint_states" to="panda/joint_states" />
    </node>
    <include file="$(find panda_moveit_config)/launch/move_group.launch" />
</launch>
